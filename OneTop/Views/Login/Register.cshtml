@model OneTop.Models.User
@{
    ViewData["Title"] = "Register";
    Layout = "_Layout";
}
@section Styles {
    <link rel="stylesheet" href="~/css/asset/css_part/Login/Register.css" asp-append-version="true" />
}
<section class="auth-wrapper" aria-labelledby="registerHeading">
    <div class="auth-card" role="region" aria-label="Register form">
        <h1 id="registerHeading">Create an account</h1>

        <form asp-action="Register" asp-controller="Login" method="post" class="register-form" autocomplete="on" novalidate>
            @Html.AntiForgeryToken()

            <div class="field">
                <label for="userId">User ID (auto-generated)</label>
                <input id="userId" type="text" value="Will be generated" disabled aria-disabled="true" />
            </div>

            <div asp-validation-summary="All" class="validation-summary"></div>

            <div class="field">
                <label asp-for="Username"></label>
                <input asp-for="Username" type="text" required minlength="3" maxlength="50" placeholder="choose a username" />
                <span asp-validation-for="Username" class="text-danger"></span>
            </div>

            <div class="field">
                <label asp-for="Password"></label>
                <input asp-for="Password" type="password" required minlength="6" maxlength="255" placeholder="••••••••" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>

            <div class="field">
                <label asp-for="FullName"></label>
                <input asp-for="FullName" type="text" required maxlength="100" placeholder="Your full name" />
                <span asp-validation-for="FullName" class="text-danger"></span>
            </div>

            <div class="field">
                <label asp-for="Email"></label>
                <input asp-for="Email" type="email" required maxlength="100" placeholder="you@example.com" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>

            <button type="submit" class="btn-primary">Register</button>

            <div class="divider"><span>or</span></div>

            <div class="alt-actions">
                <a class="btn-outline" asp-controller="Login" asp-action="Login">Already have an account? Sign in</a>
            </div>
        </form>
    </div>

    <aside class="auth-side">
        <div class="brand">ClothingStore</div>
        <p class="lead">Join us to manage orders, save favorites, and checkout faster.</p>
    </aside>
</section>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}
