@model OneTop.Models.User

@{
    ViewData["Title"] = "Login";
    Layout = "_Layout";
}
@section Styles {
    <link rel="stylesheet" href="~/css/asset/css_part/Login/Login.css" asp-append-version="true" />
}

<section class="auth-wrapper" aria-labelledby="loginHeading">
    <div class="auth-card" role="region" aria-label="Login form">
        <h1 id="loginHeading">Sign in to your account</h1>

        <form asp-controller="Login" asp-action="Login" method="post" class="login-form" autocomplete="on" novalidate>
            @Html.AntiForgeryToken()

            <div class="field">
                <label asp-for="Username"></label>
                <input asp-for="Username" id="username" required placeholder="username..." />
                <span asp-validation-for="Username" class="text-danger"></span>
            </div>

            <div class="field">
                <label asp-for="Password"></label>
                <input asp-for="Password" id="password" type="password" required minlength="6" placeholder="••••••••" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>

            <div class="row">
                <label class="checkbox">
                    <input  type="checkbox" />
                    <span>Remember me</span>
                </label>
                <a class="text-link" href="/Account/ForgotPassword">Forgot?</a>
            </div>

            <button type="submit" class="btn-primary">Sign in</button>

            <div class="divider"><span>or</span></div>

            <div class="alt-actions">
                <a class="btn-outline" asp-controller="Login" asp-action="Register">Create an account</a>
            </div>
        </form>
    </div>

    <aside class="auth-side">
        <div class="brand">ClothingStore</div>
        <p class="lead">Welcome back — sign in to manage your orders and checkout faster.</p>
    </aside>
</section>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

